#!/usr/bin/env bash

while true
do
	echo "Pomodoro: 25 minutes"
	afplay /System/Library/Sounds/Pop.aiff
	mins=25
	while [ $mins -gt 0 ]; do
		echo -ne "$mins\033[0K\r"
		sleep 60
		: $((mins--))
	done
	afplay /System/Library/Sounds/Submarine.aiff

	echo "Take a break!"
	mins=5
	while [ $mins -gt 0 ]; do
		echo -ne "$mins\033[0K\r"
		sleep 60
		: $((mins--))
	done
done
